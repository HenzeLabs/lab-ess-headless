{
  "name": "lab-ess-headless",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "check:safe": "npm run typecheck && npm run lint && npm run build && playwright test tests/functional.spec.ts tests/accessibility.spec.ts",
    "analyze": "cross-env ANALYZE=true next build",
    "lh": "lhci autorun --config=./lighthouse.config.js",
    "clean:shopify": "tools/shopify-cleanup/bin/index.sh",
    "test:analytics": "playwright test tests/analytics-flow.spec.ts",
    "test:seo": "playwright test tests/seo.spec.ts",
    "test:a11y": "playwright test tests/accessibility.spec.ts",
    "test:perf": "playwright test tests/performance.spec.ts",
    "test:visual": "playwright test tests/visual-regression.spec.ts",
    "test:core": "playwright test tests/homepage.spec.ts tests/products.spec.ts tests/cart.spec.ts tests/checkout.spec.ts tests/account.spec.ts tests/shopify-core-flow.spec.ts",
    "test:all": "playwright test",
    "test:ci": "npm run test:core",
    "fetch-product-handle": "node scripts/fetch-product-handle.mjs",
    "prepare": "husky"
  },
  "dependencies": {
    "@google-analytics/data": "^5.2.1",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@upstash/redis": "^1.35.6",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "cookie": "^1.0.2",
    "dotenv": "^17.2.2",
    "framer-motion": "^12.23.24",
    "jose": "^6.1.0",
    "lucide-react": "^0.544.0",
    "next": "^15.5.2",
    "next-pwa": "^5.6.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^3.4.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.3.1",
    "@types/react": "^19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "lhci": "^4.1.1",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.6",
    "tailwindcss-animate": "^1.0.7",
    "ts-prune": "^0.10.3",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
