[
  {
    "id": "frontend-homepage",
    "title": "Homepage Tests",
    "description": "Test homepage functionality, layout, and content rendering",
    "url": "/",
    "tests": [
      {
        "name": "Homepage loads successfully",
        "steps": [
          "Navigate to homepage",
          "Wait for page to fully load",
          "Verify page title",
          "Check main navigation visibility"
        ],
        "validations": {
          "title": {
            "contains": "Lab Essentials"
          },
          "elements": {
            "header": {
              "selector": "header",
              "visible": true
            },
            "navigation": {
              "selector": "nav",
              "visible": true
            },
            "main": {
              "selector": "main",
              "visible": true
            },
            "footer": {
              "selector": "footer",
              "visible": true
            }
          },
          "performance": {
            "loadTime": {
              "max": 3000
            }
          }
        }
      },
      {
        "name": "Featured products display",
        "steps": [
          "Navigate to homepage",
          "Scroll to featured products section",
          "Verify products are displayed"
        ],
        "validations": {
          "elements": {
            "productGrid": {
              "selector": "[data-testid='featured-products'], .featured-products, #featured-products",
              "visible": true
            },
            "productCards": {
              "selector": "[data-testid='product-card'], .product-card, article",
              "minCount": 1,
              "maxCount": 12
            }
          },
          "content": {
            "productCard": {
              "hasImage": true,
              "hasTitle": true,
              "hasPrice": true
            }
          }
        }
      },
      {
        "name": "Hero section validation",
        "steps": [
          "Navigate to homepage",
          "Check hero section"
        ],
        "validations": {
          "elements": {
            "hero": {
              "selector": "[data-testid='hero'], .hero, section:first-child",
              "visible": true
            }
          }
        }
      }
    ]
  },
  {
    "id": "frontend-products",
    "title": "Product Browsing Tests",
    "description": "Test product listing and detail page functionality",
    "url": "/products",
    "tests": [
      {
        "name": "Products page displays products",
        "steps": [
          "Navigate to /products",
          "Wait for products to load",
          "Verify product grid is displayed"
        ],
        "validations": {
          "url": {
            "pathname": "/products"
          },
          "elements": {
            "productGrid": {
              "selector": "[data-testid='products-grid'], .products-grid, .grid",
              "visible": true
            },
            "productCards": {
              "selector": "[data-testid='product-card'], .product-card",
              "minCount": 1
            }
          },
          "content": {
            "products": {
              "each": {
                "hasImage": true,
                "hasTitle": true,
                "hasPrice": true,
                "isClickable": true
              }
            }
          }
        }
      },
      {
        "name": "Product detail page",
        "steps": [
          "Navigate to /products",
          "Click on first product",
          "Verify product detail page loads"
        ],
        "validations": {
          "url": {
            "pattern": "/products/[^/]+$"
          },
          "elements": {
            "productImage": {
              "selector": "[data-testid='product-image'], .product-image, img",
              "visible": true
            },
            "productTitle": {
              "selector": "[data-testid='product-title'], h1",
              "visible": true,
              "hasText": true
            },
            "productPrice": {
              "selector": "[data-testid='product-price'], .price",
              "visible": true,
              "hasText": true
            },
            "addToCartButton": {
              "selector": "[data-testid='add-to-cart'], button[type='submit']",
              "visible": true,
              "enabled": true
            }
          }
        }
      }
    ]
  },
  {
    "id": "frontend-navigation",
    "title": "Navigation Tests",
    "description": "Test main navigation and search functionality",
    "url": "/",
    "tests": [
      {
        "name": "Navigation menu is functional",
        "steps": [
          "Check header navigation",
          "Verify menu items",
          "Test navigation links"
        ],
        "validations": {
          "elements": {
            "header": {
              "selector": "header",
              "visible": true
            },
            "logo": {
              "selector": "[data-testid='logo'], .logo, a[href='/']",
              "visible": true,
              "clickable": true
            },
            "navLinks": {
              "selector": "nav a, [data-testid='nav-link']",
              "minCount": 3
            },
            "cartIcon": {
              "selector": "[data-testid='cart-icon'], [aria-label*='cart'], .cart",
              "visible": true,
              "clickable": true
            },
            "searchButton": {
              "selector": "[data-testid='search'], [aria-label*='search'], .search",
              "visible": true
            }
          }
        }
      },
      {
        "name": "Mobile menu functionality",
        "viewport": {
          "width": 375,
          "height": 812
        },
        "steps": [
          "Resize to mobile viewport",
          "Click menu toggle",
          "Verify mobile menu opens"
        ],
        "validations": {
          "elements": {
            "menuToggle": {
              "selector": "[data-testid='menu-toggle'], .menu-toggle, button[aria-label*='menu']",
              "visible": true,
              "clickable": true
            }
          }
        }
      }
    ]
  },
  {
    "id": "frontend-cart",
    "title": "Shopping Cart Tests",
    "description": "Test cart functionality and checkout flow",
    "url": "/products",
    "tests": [
      {
        "name": "Add to cart functionality",
        "steps": [
          "Navigate to products page",
          "Click on a product",
          "Click Add to Cart button",
          "Verify cart updates"
        ],
        "validations": {
          "actions": {
            "addToCart": {
              "success": true,
              "cartUpdated": true
            }
          },
          "elements": {
            "cartCount": {
              "selector": "[data-testid='cart-count'], .cart-count",
              "hasText": true,
              "minValue": 1
            }
          },
          "notifications": {
            "success": {
              "appears": true,
              "duration": {
                "min": 1000,
                "max": 5000
              }
            }
          }
        }
      },
      {
        "name": "Cart page functionality",
        "steps": [
          "Click cart icon",
          "Verify cart page loads",
          "Check cart items display"
        ],
        "validations": {
          "url": {
            "pathname": "/cart"
          },
          "elements": {
            "cartItems": {
              "selector": "[data-testid='cart-item'], .cart-item",
              "minCount": 0
            },
            "cartTotal": {
              "selector": "[data-testid='cart-total'], .cart-total",
              "visible": true,
              "hasText": true
            },
            "checkoutButton": {
              "selector": "[data-testid='checkout'], button[type='submit']",
              "visible": true
            }
          }
        }
      }
    ]
  },
  {
    "id": "frontend-footer",
    "title": "Footer Tests",
    "description": "Test footer links, content, and newsletter signup",
    "url": "/",
    "tests": [
      {
        "name": "Footer contains required links",
        "steps": [
          "Scroll to footer",
          "Verify footer sections",
          "Check links"
        ],
        "validations": {
          "elements": {
            "footer": {
              "selector": "footer",
              "visible": true
            },
            "footerLinks": {
              "selector": "footer a",
              "minCount": 5
            },
            "socialLinks": {
              "selector": "[data-testid='social-link'], .social-link",
              "minCount": 1
            }
          },
          "content": {
            "copyright": {
              "selector": "footer",
              "contains": "Â©"
            }
          }
        }
      },
      {
        "name": "Newsletter signup",
        "steps": [
          "Scroll to footer",
          "Find newsletter form",
          "Enter email",
          "Submit form"
        ],
        "validations": {
          "elements": {
            "newsletterForm": {
              "selector": "[data-testid='newsletter'], form",
              "visible": true
            },
            "emailInput": {
              "selector": "input[type='email']",
              "visible": true,
              "required": true
            },
            "submitButton": {
              "selector": "button[type='submit']",
              "visible": true,
              "enabled": true
            }
          }
        }
      }
    ]
  },
  {
    "id": "frontend-search",
    "title": "Search Functionality Tests",
    "description": "Test search modal and results",
    "url": "/",
    "tests": [
      {
        "name": "Search modal opens",
        "steps": [
          "Click search button",
          "Verify modal opens",
          "Check search input focus"
        ],
        "validations": {
          "elements": {
            "searchModal": {
              "selector": "[data-testid='search-modal'], .search-modal",
              "visible": true
            },
            "searchInput": {
              "selector": "input[type='search'], input[type='text']",
              "visible": true,
              "focused": true
            },
            "closeButton": {
              "selector": "[data-testid='close'], button[aria-label*='close']",
              "visible": true
            }
          }
        }
      },
      {
        "name": "Search results display",
        "steps": [
          "Open search modal",
          "Type 'product' in search",
          "Verify results appear"
        ],
        "validations": {
          "elements": {
            "searchResults": {
              "selector": "[data-testid='search-results'], .search-results",
              "visible": true
            }
          },
          "actions": {
            "search": {
              "query": "product",
              "resultsAppear": true,
              "responseTime": {
                "max": 2000
              }
            }
          }
        }
      }
    ]
  },
  {
    "id": "frontend-responsive",
    "title": "Responsive Design Tests",
    "description": "Test layout across different viewports",
    "url": "/",
    "tests": [
      {
        "name": "Desktop layout",
        "viewport": {
          "width": 1920,
          "height": 1080
        },
        "validations": {
          "layout": {
            "navigation": {
              "type": "horizontal",
              "visible": true
            },
            "grid": {
              "columns": {
                "min": 3,
                "max": 4
              }
            }
          }
        }
      },
      {
        "name": "Tablet layout",
        "viewport": {
          "width": 768,
          "height": 1024
        },
        "validations": {
          "layout": {
            "grid": {
              "columns": {
                "min": 2,
                "max": 3
              }
            }
          }
        }
      },
      {
        "name": "Mobile layout",
        "viewport": {
          "width": 375,
          "height": 812
        },
        "validations": {
          "layout": {
            "navigation": {
              "type": "hamburger",
              "visible": true
            },
            "grid": {
              "columns": {
                "min": 1,
                "max": 2
              }
            }
          }
        }
      }
    ]
  }
]