{
  "tech_stack": [
    "TypeScript",
    "Next.js 15.5.2",
    "React 19.1.0",
    "Tailwind CSS",
    "Shopify GraphQL API",
    "Redis/Upstash",
    "PostgreSQL",
    "AWS S3",
    "Google Analytics 4",
    "Vercel",
    "PWA"
  ],
  "features": [
    {
      "name": "Product Management API",
      "description": "Fetches and manages product data from Shopify",
      "files": [
        "src/app/api/products/route.ts",
        "src/app/api/product-by-handle/route.ts",
        "src/app/api/featured-products/route.ts",
        "src/app/api/debug-products/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/products": {
            "get": {
              "summary": "Get all products",
              "responses": {
                "200": {
                  "description": "List of products",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": { "type": "string" },
                            "title": { "type": "string" },
                            "handle": { "type": "string" },
                            "featuredImage": { "type": "object" },
                            "priceRange": { "type": "object" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Collections API",
      "description": "Manages product collections and categories",
      "files": [
        "src/app/api/collections/route.ts",
        "src/app/api/collection-products/route.ts",
        "src/app/api/debug-collections/route.ts",
        "src/app/api/diagnose-collections/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/collections": {
            "get": {
              "summary": "Get all collections",
              "responses": {
                "200": {
                  "description": "List of collections"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Authentication API",
      "description": "Handles customer authentication and session management",
      "files": [
        "src/app/api/auth/login/route.ts",
        "src/app/api/auth/register/route.ts",
        "src/app/api/auth/logout/route.ts",
        "src/app/api/auth/refresh/route.ts",
        "src/app/api/auth/verify/route.ts",
        "src/app/api/auth/recover/route.ts",
        "src/app/api/auth/reset/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/auth/login": {
            "post": {
              "summary": "Customer login",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "email": { "type": "string" },
                        "password": { "type": "string" }
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Login successful"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Customer API",
      "description": "Manages customer profiles and order history",
      "files": [
        "src/app/api/customer/profile/route.ts",
        "src/app/api/customer/orders/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/customer/profile": {
            "get": {
              "summary": "Get customer profile",
              "responses": {
                "200": {
                  "description": "Customer profile data"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Checkout API",
      "description": "Handles cart and checkout operations",
      "files": [
        "src/app/api/checkout/route.ts",
        "src/app/cart/actions.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/checkout": {
            "post": {
              "summary": "Create checkout session",
              "responses": {
                "200": {
                  "description": "Checkout session created"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Orders API",
      "description": "Manages customer orders",
      "files": [
        "src/app/api/orders/route.ts",
        "src/app/api/orders/[id]/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/orders": {
            "get": {
              "summary": "Get orders",
              "responses": {
                "200": {
                  "description": "List of orders"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Analytics API",
      "description": "Tracks user behavior and provides analytics data",
      "files": [
        "src/app/api/analytics/route.ts",
        "src/app/api/analytics/enhanced/route.ts",
        "src/app/api/analytics/shopify/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/analytics": {
            "post": {
              "summary": "Track analytics event",
              "responses": {
                "200": {
                  "description": "Event tracked"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "A/B Testing API",
      "description": "Manages A/B testing experiments",
      "files": [
        "src/app/api/ab-tests/[testId]/route.ts",
        "src/app/api/experiments/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/experiments": {
            "get": {
              "summary": "Get active experiments",
              "responses": {
                "200": {
                  "description": "List of experiments"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Menu API",
      "description": "Provides navigation menu data",
      "files": [
        "src/app/api/menu/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/menu": {
            "get": {
              "summary": "Get menu structure",
              "responses": {
                "200": {
                  "description": "Menu data"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Health Check API",
      "description": "Monitors application health and cache status",
      "files": [
        "src/app/api/health-check/route.ts",
        "src/app/api/cache/health/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/health-check": {
            "get": {
              "summary": "Check application health",
              "responses": {
                "200": {
                  "description": "Health status"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Translations API",
      "description": "Provides internationalization support",
      "files": [
        "src/app/api/translations/[locale]/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/translations/{locale}": {
            "get": {
              "summary": "Get translations for locale",
              "parameters": [
                {
                  "name": "locale",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "Translation data"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Revalidation API",
      "description": "Handles cache revalidation",
      "files": [
        "src/app/api/revalidate/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/revalidate": {
            "post": {
              "summary": "Revalidate cache",
              "responses": {
                "200": {
                  "description": "Cache revalidated"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Error Tracking API",
      "description": "Logs and tracks application errors",
      "files": [
        "src/app/api/errors/route.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/api/errors": {
            "post": {
              "summary": "Log error",
              "responses": {
                "200": {
                  "description": "Error logged"
                }
              }
            }
          }
        }
      }
    }
  ]
}